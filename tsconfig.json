{
    "extends": "@vue/tsconfig/tsconfig.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "vite.config.*",
        "vitest.config.*",
        "cypress.config.*",
        "nightwatch.conf.*",
        "playwright.config.*",
        "eslint.config.*"
    ],
    "exclude": ["src/**/tests/*"],
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "paths": {
            "@/*": ["./src/*"],
            "@@/*": ["./*"]
        }
    }
}
